  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav">
        <li><%= link_to "Home", home_path%></li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li><%= link_to "Create Post", new_post_path %></li>
      </ul
